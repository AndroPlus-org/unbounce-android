<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryansteckler.nlpunbounce.MaterialSettingsActivity.HomeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <View style="@style/Divider"
                android:layout_marginTop="@dimen/separator_pad"
                android:visibility="gone" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="end"
                    android:layout_marginTop="@dimen/separator_pad"
                    android:layout_marginBottom="@dimen/separator_pad">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:src="@drawable/ic_global" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/lb_global"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:text="@string/global_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our combined stats"
                            android:layout_marginLeft="@dimen/pad_icon"/>

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginTop="@dimen/separator_pad"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Wakelock time allowed"
                        android:gravity="center_vertical"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="26d 17h 47m 39s"
                        android:id="@+id/textGlobalWakeTimeAllowed"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Wakelock time blocked"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="52d 4h 41m 36s"
                        android:id="@+id/textGlobalWakeTimeBlocked"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Wakelocks acquired"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="4,793,202"
                        android:id="@+id/textGlobalWakeAcquired"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Wakelocks blocked"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="953,664"
                        android:id="@+id/textGlobalWakeBlocked"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Alarms fired"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="87,499"
                        android:id="@+id/textGlobalAlarmsFired"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Alarms blocked"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="43,224"
                        android:id="@+id/textGlobalAlarmsBlocked"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
            </LinearLayout>
            <View style="@style/Divider"
                android:layout_marginTop="@dimen/separator_pad"
                android:visibility="gone" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/separator_pad"
                    android:background="@color/background_secondary"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:padding="@dimen/activity_vertical_margin">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:src="@drawable/ic_local" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/lb_local"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:text="@string/local_text"
                            style="@style/TextTitleLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your device stats"
                            android:layout_marginLeft="@dimen/pad_icon"
                            style="@style/TextCaptionLight" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelock time allowed"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="26d 17h 47m 39s"
                            android:id="@+id/textLocalWakeTimeAllowed"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelock time blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="52d 4h 41m 36s"
                            android:id="@+id/textLocalWakeTimeBlocked"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelocks acquired"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="4,793,202"
                            android:id="@+id/textLocalWakeAcquired"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelocks blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="953,664"
                            android:id="@+id/textLocalWakeBlocked"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Alarms fired"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="87,499"
                            android:id="@+id/textLocalAlarmsAcquired"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Alarms blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="43,224"
                            android:id="@+id/textLocalAlarmsBlocked"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/section_pad">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="end"
                    android:background="@color/background_four"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/separator_pad"
                    android:layout_marginTop="@dimen/section_pad">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:src="@drawable/ic_gift" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:text="@string/donate_text"
                            style="@style/TextTitleLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support your local developer"
                            android:layout_marginLeft="@dimen/pad_icon"
                            style="@style/TextCaptionLight" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/separator_pad"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="A cup of coffee while I write code"
                            android:layout_weight="1"
                            style="@style/TextBody1"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="@dimen/sub_icon_size"
                            android:layout_height="@dimen/sub_icon_size"
                            android:src="@drawable/ic_donate_1"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/separator_pad"
                        android:layout_marginBottom="@dimen/separator_pad"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="A latte while I answer forum questions"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <ImageView
                            android:layout_width="@dimen/sub_icon_size"
                            android:layout_height="@dimen/sub_icon_size"
                            android:src="@drawable/ic_donate_5"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/separator_pad"
                        android:layout_marginBottom="@dimen/separator_pad"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="The joy of not carrying your charger"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <ImageView
                            android:layout_width="@dimen/sub_icon_size"
                            android:layout_height="@dimen/sub_icon_size"
                            android:src="@drawable/ic_donate_10"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
