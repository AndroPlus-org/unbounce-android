<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="Options"
        android:key="">

        <CheckBoxPreference
            android:key="show_launcher_icon"
            android:title="Show launcher icon"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="global_participation"
            android:title="Participate in Global Stats"
            android:summary="Send and receive anonymous stats"
            android:defaultValue="true"/>

        <Preference
            android:title="Reset to defaults"
            android:key="reset_defaults"
            android:editable="false"
            android:defaultValue="0"
            android:summary="Reset all alarms and wakelocks to default settings"
            />


    </PreferenceCategory>

    <PreferenceCategory
        android:title="Debug"
        android:key="">

        <Preference
            android:title="Author: Ryan Steckler"
            android:key="about_author"
            android:editable="false"
            android:defaultValue="0"
            android:summary="Version: 1.2.2"
            />

        <CheckBoxPreference
            android:key="debug_logging"
            android:title="Debug Logging"
            android:summary="Enable debug logcat output"
            android:defaultValue="false"/>

    </PreferenceCategory>

