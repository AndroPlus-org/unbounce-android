<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="@string/settings_category_options"
        android:key="">

        <CheckBoxPreference
            android:key="show_launcher_icon"
            android:title="@string/settings_item_show_launcher"
            android:defaultValue="true"/>

        <ListPreference
            android:key="theme"
            android:title="@string/settings_item_choose_theme"
            android:dialogTitle="@string/settings_item_choose_theme"
            android:entries="@array/themeArray"
            android:entryValues="@array/themeValues"
            android:defaultValue="default" />

        <CheckBoxPreference
            android:key="global_participation"
            android:title="@string/settings_item_global_stats_title"
            android:summary="@string/settings_item_global_stats_summary"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="force_english"
            android:title="@string/settings_item_force_english_title"
            android:summary="@string/settings_item_force_english_summary"
            android:defaultValue="false"/>

        <Preference
            android:title="@string/settings_item_reset_defaults_title"
            android:key="reset_defaults"
            android:editable="false"
            android:defaultValue="0"
            android:summary="@string/settings_item_reset_defaults_title"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_category_debug"
        android:key="">

        <Preference
            android:title="@string/settings_item_author"
            android:key="about_author"
