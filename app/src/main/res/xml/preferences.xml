            />

        <Preference
            android:title="Additional Code: Ruturaj Shetye"
            android:editable="false"
            android:defaultValue="0"
            android:summary="JellyBean 4.1.2 Fixes"
            />

        <ListPreference
            android:key="logging_level"
            android:title="@string/settings_item_logging_level"
            android:dialogTitle="@string/settings_item_logging_level"
            android:entries="@array/loggingArray"
            android:entryValues="@array/loggingValues"
            android:defaultValue="default" />

    </PreferenceCategory>

